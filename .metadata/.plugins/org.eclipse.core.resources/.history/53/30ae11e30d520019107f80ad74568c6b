package test.next.step;

import java.util.regex.Matcher;
import java.util.regex.Pattern;

import test.next.step.exception.NegativeNumberException;

public class StringCalculator {
	public int returnNumber(String number) {
		
		Matcher m = Pattern.compile("//(.)\n(.*)").matcher(number);
		if (m.find()) {
			String separate = m.group(1);
			String[] split = m.group(2).split(separate);
		}
		
		
		
		for (String a : split) {
			if (a.indexOf("-") != -1) {
				throw new NegativeNumberException("음수가 들어갈 수 없다.");
			}
			sum += Integer.parseInt(a);
		}
		return sum;
	}
}
