package test.next.step;

import static org.junit.Assert.assertEquals;

import org.junit.Test;

public class CalculatorTest {
	Calculator cal;

	@org.junit.Before
	private void setUp() {
		cal = new Calculator();
	}
	
	@Test
	public void add() {
		assertEquals(9, cal.add(6, 32));
		
	}
	
}

class Calculator {
	int add(int i, int j) {
		return i + j;
	}
	
	int subtract(int i, int j) {
		return i - j;
	}
	
	int multiply(int i, int j) {
		return i * j;
	}
	
	int divide(int i, int j) {
		return i / j;
	}
}