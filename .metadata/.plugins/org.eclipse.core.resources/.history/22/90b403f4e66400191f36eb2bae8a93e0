package test.next.step.chapter03.ex01board.domain;

public class Pagination {
	private int startPage = 1;		// 시작 페이지
	private int endPage = 10;		// 끝 페이지
	private boolean prev;			// 이전
	private boolean next;			// 다음
	
	private int totalItemCnt;		// 총 게시글 수
	private int pageCnt;			// 남은 페이지 수
	
	private int viewItemCnt = 10;	// 페이지에 보여질 게시글 수
	private int viewPageCnt = 10;	// 한 페이지에 보여질 페이지 수
	
	private int curPage = 1;		// 현재 페이지
	
	
	public Pagination() { }

	public Pagination(int startPage, int endPage, boolean prev, boolean next, int totalItemCnt, int totalPageCnt,
			int pageCnt, int viewItemCnt, int viewPageCnt, int curPage) {
		this.startPage = startPage;
		this.endPage = endPage;
		this.prev = prev;
		this.next = next;
		this.totalItemCnt = totalItemCnt;
		this.totalPageCnt = totalPageCnt;
		this.pageCnt = pageCnt;
		this.viewItemCnt = viewItemCnt;
		this.viewPageCnt = viewPageCnt;
		this.curPage = curPage;
	}

	public int getStartPage() {
		return startPage;
	}

	public void setStartPage(int startPage) {
		this.startPage = startPage;
	}

	public int getEndPage() {
		return endPage;
	}

	public void setEndPage(int endPage) {
		this.endPage = endPage;
	}

	public boolean isPrev() {
		return prev;
	}

	public void setPrev(boolean prev) {
		this.prev = prev;
	}

	public boolean isNext() {
		return next;
	}

	public void setNext(boolean next) {
		this.next = next;
	}

	public int getTotalItemCnt() {
		return totalItemCnt;
	}

	public void setTotalItemCnt(int totalItemCnt) {
		this.totalItemCnt = totalItemCnt;
	}

	public int getTotalPageCnt() {
		return totalPageCnt;
	}

	public void setTotalPageCnt(int totalPageCnt) {
		this.totalPageCnt = totalPageCnt;
	}

	public int getPageCnt() {
		return pageCnt;
	}

	public void setPageCnt(int pageCnt) {
		this.pageCnt = pageCnt;
	}

	public int getViewItemCnt() {
		return viewItemCnt;
	}

	public void setViewItemCnt(int viewItemCnt) {
		this.viewItemCnt = viewItemCnt;
	}

	public int getViewPageCnt() {
		return viewPageCnt;
	}

	public void setViewPageCnt(int viewPageCnt) {
		this.viewPageCnt = viewPageCnt;
	}

	public int getCurPage() {
		return curPage;
	}

	public void setCurPage(int curPage) {
		this.curPage = curPage;
	}
	
	
	// 이전 페이지 존재
	public boolean hasPrev() {
		
		return prev;
	}
	
	// 다음 페이지 존재
	public boolean hasNext() {
		return next;
	}
	
	// 남은 페이지 수 리턴
	public int returnPageNum() {
		return
	}
	
	// 현재 페이지
	
	
	
}
