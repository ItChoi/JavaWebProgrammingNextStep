<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="test.next.step.chapter03.ex01board.mapper.BoardMapper">

	<resultMap id="BoardResult" type="test.next.step.chapter03.ex01board.domain.Board">
		<id property="boardId" column="BOARD_ID"/>
		<result property="userId" column="USER_ID"/>
		<result property="title" column="TITLE"/>
		<result property="content" column="CONTENT"/>
		<result property="image" column="IMAGE"/>
		<result property="hitCount" column="HIT_COUNT"/>
		<result property="createdDate" column="CREATED_DATE"/>
	</resultMap>
	
	<resultMap id="BoardReplyResult" type="test.next.step.chapter03.ex01board.domain.BoardReply">
		<id property="replyId" column="REPLY_ID"/>
		<result property="boardId" column="BOARD_ID"/>
		<result property="parentReplyId" column="PARENT_REPLY_ID"/>
		<result property="replyLevel" column="REPLY_LEVEL"/>
		<result property="userId" column="USER_ID"/>
		<result property="content" column="CONTENT"/>
		<result property="createdDate" column="CREATED_DATE"/>
	</resultMap>
	
	<sql id="AllBoardColumn">
		B.BOARD_ID,
		B.USER_ID,
		B.TITLE,
		B.CONTENT,
		B.IMAGE,
		B.HIT_COUNT,
		B.CREATED_DATE
	</sql>
	
	<sql id="AllBoardReplyColumn">
		BR.REPLY_ID,
		BR.BOARD_ID,
		BR.PARENT_REPLY_ID,
		BR.REPLY_LEVEL,
		BR.USER_ID,
		BR.CONTENT,
		BR.CREATED_DATE
	</sql>
	

	<select id="getBoardList" resultMap="BoardResult">
		SELECT
		  B.*
		FROM
		  (
		  SELECT 
		    ROWNUM RNUM,
		    <include refid="AllBoardColumn" />
		  FROM
		    (
		    SELECT
		      <include refid="AllBoardColumn" />
		    FROM  
		      BOARD B
		    ) A
		  WHERE
		    ROWNUM <![CDATA[<=]]> 10
		  ) B
		WHERE
		  B.RNUM <![CDATA[ >= ]]> 1
	</select>

	<select id="getBoardByBoardId" parameterType="Long" resultMap="BoardResult">
		SELECT
			<include refid="AllBoardColumn" />
		FROM
			BOARD B
		WHERE
			BOARD_ID = #{boardId}
	</select>

	<select id="getBoardReplyByBoardId" parameterType="Long" parameterMap="">
	SELECT
  BR.*
FROM
  (
    SELECT REPLY_ID, BOARD_ID, PARENT_REPLY_ID, REPLY_LEVEL, CONTENT, CREATED_DATE
    FROM
      BOARD_REPLY
    WHERE
      BOARD_ID = 2
  ) BR  
ORDER BY
  (CASE WHEN PARENT_REPLY_ID IS NULL
    THEN REPLY_ID
  ELSE
    PARENT_REPLY_ID
  END),
  REPLY_LEVEL,
  CREATED_DATE
ASC;
	</select>

</mapper>